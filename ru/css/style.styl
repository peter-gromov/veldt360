border-radius(n)
    -webkit-border-radius n
    -moz-border-radius n
    border-radius n
    
text-shadow(n)
    -webkit-text-shadow n
    -moz-text-shadow n
    -ms-text-shadow n
    -o-text-shadow n
    text-shadow n

.dib
    display inline-block
    *display inline 
    zoom 1
.dib_t
    @extends .dib
    vertical-align top
.dib_m
    @extends .dib
    vertical-align middle
.dib_b
    @extends .dib
    vertical-align bottom
.dib_base
    @extends .dib
    vertical-align baseline
    
    /* 1280 */
.wc
    width 1163px
    margin 0 auto
    position relative

.vbutton
    @extends .dib_base
    padding 5px 40px 
    background-color black 
    color white 
    font-size 16.36px
    text-align center
    text-decoration none
    margin-left 15px
    margin-right 15px
    border-radius(50px)   
    &-red 
        background-color #db1419 

.header
    position absolute
    padding-top 20px
    left 0 
    top 0
    z-index 50
    width 100%
    white-space nowrap
    &-logo 
        @extends .dib_m
        width 400px
    &-menu
        @extends .dib_m
        width 800px
        &-list
            list-style none 
            margin 0
            padding 0
            text-align right
            &-li 
                @extends .dib_t
                padding-left 57px
            &-link 
                color white 
                font-size 14.3px 
                text-decoration none

