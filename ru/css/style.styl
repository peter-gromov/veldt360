    &-text1
        font-size 38px
        text-align center 
        color #edecec
        opacity 0.5
        font-weight 500
        padding-top 50.1px
    &-text2 
        font-size 37px
        text-align center 
        color white
        font-weight 500
        padding-top 83px
    &-desc 
        padding-top 60px
        font-size 18.8px 
        color white 
        text-align center
        font-weight 500
    &-logo 
        text-align center
        padding-top 186px
        
    &-buttons
        text-align center
        padding-top 50.3px
        

.row-2
    background-color #121212
    padding-top 42px
    padding-bottom 42px
    &-text 
        font-size 18.8px 
        color white
        text-align center
        margin-bottom 24px
    &-button 
        text-align center
       
.row-25
    margin-top 54px
    margin-bottom 54px    
    &-text 

        font-size 33px
