.row-35
    height auto 
    background-color #000000       

.row-3 
    background-image url(../bg2.jpg)
    background-position center top 
    height 949px        
    
       
.row-45
    margin-top 54px
    margin-bottom 54px  
    &-cols 
        white-space nowrap
        &-col
            @extends .dib_t
            width 33%
            text-align center
            white-space normal 
            &-title
                margin-top 53px 
                margin-bottom 40px  
                font-size 33px
            &-text 
                font-size 18.8px
                padding-left 10px 
                padding-right 10px 
                box-sizing border-box
