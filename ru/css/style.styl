.contactus 
    &-icons
        
        width 450px
        margin 0 auto
        margin-top 50px 
        text-align center
        &-link
            @extends .dib_t 
            width 120px
            text-align center
            margin-bottom 50px
    &-form 
        width 775px
        
        margin 0 auto
        margin-bottom 40px
        &-input
            width 100%
            padding 5px
            font-size 18.8px
            margin-bottom 15px
            outline 0
                                

.row-4 
    background-image url(../bg3.jpg)
    background-position center top 
    height 864px
    &-title
        font-size 60px 
        text-align center
        padding-left 430px
        padding-top 230px
    &-subtitle
        font-size 24px
        text-align center
        padding-left 430px
        padding-top 60px
        text-shadow(0 0 15px white)
    &-button 
        padding-left 430px
        padding-top 100px
        text-align center
        & .vbutton 
            width 200px
    
.row-5
    &-slides
        margin 0
        padding 0
        list-style none
        

.footer
    color white
    background-color #000000
    padding-top 40px
    padding-bottom 40px
    white-space nowrap
    &-contacts 
        @extends .dib_t
        width 600px
        white-space normal
        &-map 
            @extends .dib_t
        &-contacts 
            margin-left 20px
            @extends .dib_t
        &-contactblock  
            font-size 14px  
            padding-left 25px 
            margin-bottom 25px
            background-position left center 
            background-repeat no-repeat
            &-phone 
                background-image url(../pic-phone.png)   
            &-email 
                background-image url(../pic-email.png)  
            &-address 
                background-image url(../pic-address.png)          
        &-title
            font-size 18px 
            
            &:after 
                content ' '
                width 50px 
                border-bottom 1px solid white
                display block
                margin-bottom 25px
                margin-top 10px
                
    &-socials 
        @extends .dib_t
        width 600px
        white-space normal
        text-align center



.footer-new
    white-space nowrap
    &-col 
        width 240px 
        @extends .dib_t
        color white 
        white-space normal
        &-title
            text-transform uppercase
            font-weight bold 
            font-size 16px
            margin-bottom 20px
        &-list
            &-link 
                @extends .dib_t
                width 100% 
                color white
                

.mapblocks
    &-mapblock 
        white-space nowrap
        &-col
            @extends .dib_t
            &-1
                width 636px
            &-2
                position relative
                height 400px
            &-info 
                position absolute
                bottom 0
                padding-left 50px
                padding-bottom 10px
                &-title
                    font-size 30px
                    margin-bottom 35px
                    padding-left 50px
                &-blocks
                    &-block 
                        white-space nowrap
                        margin-bottom 20px
                        &-icon 
                            @extends .dib_m
                            white-space normal
                            width 50px
                        &-text 
                            @extends .dib_m
                            white-space normal
                            
                